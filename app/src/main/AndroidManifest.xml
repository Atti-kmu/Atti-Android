<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atti.atti_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainactivity.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playrtc.PlayRTCDisplay"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/videotelephony"
            android:screenOrientation="landscape" />
        <activity
            android:name=".list.ElderlyList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/list"
            android:screenOrientation="landscape" />
        <activity
            android:name=".list.FamilyList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/list"
            android:screenOrientation="landscape" />
        <activity
            android:name=".list.SocialWorkerList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/list"
            android:screenOrientation="landscape" />
    </application>

    <!-- PlayRTC SDK permission START -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- PlayRTC SDK permission END -->

    <!-- for PlayRTC SDK AudioManager -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Logging save to SDCard  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
